{
    "version" : "1.0.0",
    "name": "tutorial",
    "webpage": "http://livecv.dinusv.com",
    "dependencies" : [
        {
            "name": "livecv",
            "version": "1.5.0",
            "repository": "https://github.com/livecv/livecv.git"
        }
    ],
    "components" : {
        "tutorial" : {
            "version" : "1.0.0"
        }
    },
    "releases" : {
        "gcc_64" : {
            "compiler" : "gcc_64",
            "environment" : {
                "OPENCV_DIR" : "opencv_dir",
                "QTDIR" : "qtdir"
            },
            "build" : [
                {"qmake" : ["-recursive"]},
                {"make" : []}
            ],
            "deploy" : [
                { "copy" : {
                    "{release}/bin/tutorial/qmldir" : "-",
                    "{release}/bin/tutorial/*.so" : "-",
                    "{release}/bin/tutorial/*.qml" : "-",
                    "{source}/samples" : "-"
                }}
            ]
        },
        "msvc2013_64" : {
            "compiler" : "msvc2013_64",
            "environment" : {
                "OPENCV_DIR" : "opencv_dir",
                "QTDIR" : "qtdir",
                "VS120COMNTOOLS": "vs120comntools"
            },
            "build" : [
                {"qmake" : ["-recursive"]},
                {"nmake" : []}
            ],
            "deploy" : [
                { "copy" : {
                    "{release}/bin/tutorial/qmldir" : "-",
                    "{release}/bin/tutorial/*.dll" : "-",
                    "{release}/bin/tutorial/*.qml" : "-",
                    "{release}/bin/tutorial/dev/*.lib" : "dev/-",
                    "{source}/samples" : "-"
                }}
            ]
        },
        "macos_clang_64" : {
            "compiler" : "clang_64",
            "environment" : {
                "OPENCV_DIR" : "opencv_dir",
                "QTDIR" : "qtdir"
            },
            "build" : [
                {"qmake" : ["-recursive"]},
                {"make" : []}
            ],
            "deploy" : [
                { "copy" : {
                    "{release}/bin/tutorial/qmldir" : "-",
                    "{release}/bin/tutorial/*.dylib" : "-",
                    "{release}/bin/tutorial/*.qml" : "-",
                    "{source}/samples" : "-"
                }}
            ]
        }
    }
}
